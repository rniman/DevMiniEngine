# DirectX 12 게임 엔진 프로젝트 Git Attributes
# 자동 줄바꿈 변환 활성화
* text=auto

#
# 소스 코드 파일
#

# C/C++ 소스 파일
*.c text eol=crlf diff=cpp
*.cpp text eol=crlf diff=cpp
*.h text eol=crlf diff=cpp
*.hpp text eol=crlf diff=cpp
*.inl text eol=crlf diff=cpp

# HLSL 셰이더 파일 (BOM 없는 UTF-8)
*.hlsl text eol=crlf
*.hlsli text eol=crlf
*.fx text eol=crlf
*.fxh text eol=crlf

# 어셈블리 파일
*.asm text eol=crlf
*.inc text eol=crlf

#
# 프로젝트 및 빌드 파일
#

# Visual Studio 프로젝트 파일
*.sln text eol=crlf merge=union
*.vcxproj text eol=crlf merge=union
*.vcxproj.filters text eol=crlf merge=union
*.vcxproj.user text eol=crlf merge=union
*.vcxitems text eol=crlf
*.props text eol=crlf
*.targets text eol=crlf
*.natvis text eol=crlf

# Visual Studio 설정
*.suo binary
*.user binary
*.userosscache binary
*.sln.docstates binary

# CMake 파일 (향후 사용 가능성)
