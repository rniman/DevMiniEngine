# DirectX 12 게임 엔진 프로젝트 EditorConfig
# 최상위 설정 파일임을 명시
root = true

# 모든 파일에 대한 기본 설정
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ 소스 파일
[*.{cpp,h,hpp,c,inl}]
charset = utf-8-bom
indent_style = tab
indent_size = 4
tab_width = 4

# HLSL 셰이더 파일
[*.{hlsl,hlsli}]
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4

# Visual Studio 프로젝트 파일
[*.{sln,vcxproj,vcxproj.filters,props,targets}]
indent_style = space
indent_size = 2

# 스크립트 파일
[*.{py,sh,bat,ps1}]
charset = utf-8
indent_style = space
indent_size = 4

# 데이터 및 설정 파일
[*.{json,xml,yaml,yml}]
charset = utf-8
indent_style = space
indent_size = 2

# 마크다운 문서
[*.{md,markdown}]
charset = utf-8
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# CMake 파일 (향후 사용 가능성 대비)
[{CMakeLists.txt,*.cmake}]
charset = utf-8
indent_style = space
indent_size = 2

# Git 설정 파일
[.git*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# 특정 파일 개별 설정
[Makefile]
indent_style = tab

[*.tsv]
indent_style = tab
trim_trailing_whitespace = false
